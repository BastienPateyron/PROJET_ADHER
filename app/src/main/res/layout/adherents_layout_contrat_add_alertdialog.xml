<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Manually imitate an entire AlertDialog layout -->
    <!-- See dialog specs on: https://material.google.com/components/dialogs.html#dialogs-specs -->

    <!-- Title and content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp"
        >

        <TextView
            android:id="@+id/contrat_service_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nouveau contrat"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Selectionner un secteur : "
        />


        <Spinner
            android:id="@+id/spinner_secteur_cs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Selectionner une activitÃ© : "
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <Spinner
                android:id="@+id/spinner_activite_cs"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                />

            <Button
                android:id="@+id/button_activite_cs_add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="AJOUT"
                android:background="@color/add_button"
                android:layout_weight="3"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_activite1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/value_act1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/button_accueil_background"

                />
            <TextView
                android:id="@+id/value_act2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/button_accueil_background"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line_act2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:gravity="center">
            <TextView
                android:id="@+id/value_act3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/button_accueil_background"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date debut contrat :"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/value_date_debut_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date fin contrat :"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/value_date_fin_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarif HT :"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/value_tarif_ht_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </LinearLayout>

    <!-- Action area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="right"
        >

        <Button
            android:id="@+id/neg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/neg_button"
            />

        <Button
            android:id="@+id/pos_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/add_button"
            android:text="@string/pos_button"
            />

    </LinearLayout>

</LinearLayout>