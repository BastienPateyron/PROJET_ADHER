<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="@color/colorSecondaire"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.design.widget.TextInputLayout
        android:id="@+id/line_raison_sociale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:hint="Raison Sociale">

        <EditText
            android:id="@+id/value_raison_sociale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@id/line_responsable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:hint="Responsable"
        android:layout_below="@+id/line_raison_sociale">

        <EditText
            android:id="@+id/value_responsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/line_adresse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_responsable">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/line_numero_rue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="N°"
            android:layout_weight=".2"
            >

            <EditText
                android:id="@+id/value_numero_rue"
                android:gravity=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/line_nom_rue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="Adresse"
            android:layout_weight=".9"
            >

            <EditText
                android:id="@+id/value_nom_rue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line_adresse2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_adresse1">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/line_ville"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="Ville"
            android:layout_weight=".6"
            >

            <EditText
                android:id="@+id/value_ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/line_cp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="Code postal"
            android:layout_weight=".4"
            >

            <EditText
                android:id="@+id/value_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_add_adherent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line_adresse2"

        android:text="Ajouter un adhérent"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"

        />


</RelativeLayout>